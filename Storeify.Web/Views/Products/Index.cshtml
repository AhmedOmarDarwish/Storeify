                </span>
                <!--end::Svg Icon-->
            </div>
        </div>
        <div class="d-flex flex-column pe-0 pe-sm10 ">
            <h3 class="card-title">Products</h3>
        </div>
    </div>
    <div>
        @* <a href="@Url.Action("Create", "Products")" class="btn btn-sm btn-primary" *@
        @*    data-title="Add Inventories" data-url="@Url.Action("Create", "Products")"> *@
        @*     <i class="bi bi-plus-square-dotted"></i> *@
        @*     Add *@
        @* </a> *@
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square-dotted"></i>
            Add</a>

    </div>
    <!--end::Icon-->
</div>

<div class="card shadow-sm">
    <partial name="_DataTablesCardHeader" />
    <div class="card-body pt-0">
        <div class="table-responsive">
            <table class="table table-row-gray300 gy-2 align-middle js-datatables" data-document-title="Products">
                <thead>
                    <tr class="fw-semibold fs-6 text-gray-800 border-bottom border-gray-200">
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
                        <th>@Html.DisplayNameFor(model => model.Barcode)</th>
                        <th>Category</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.StockQuantity)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedById)</th>
                        @* <th>@Html.DisplayNameFor(model => model.CreatedDate)</th> *@
                        @* <th>@Html.DisplayNameFor(model => model.UpdatedBy)</th> *@
                        <th> @Html.DisplayNameFor(model => model.UpdatedOn)</th>
                        @* <th>@Html.DisplayNameFor(model => model.DeletedBy)</th> *@
                        @* <th>@Html.DisplayNameFor(model => model.DeletedDate)</th> *@
                        @* <th>@Html.DisplayNameFor(model => model.DeletedReason)</th> *@
                        <th class="js-no-export">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <partial name="_ProductRow" model="@product" />
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />

@* @Html.AntiForgeryToken() *@

@section Plugins
{
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
