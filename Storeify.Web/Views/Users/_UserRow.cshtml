@model UserViewModel
<tr>
    <td>@Model.FirstName @Model.LastName</td>
    <td>@Model.Username</td>
    <td>
        @{

            var statusClass = Model.IsDeleted ? "badge badge-light-danger" : "badge badge-light-success";
            var statusText = Model.IsDeleted ? "Deleted" : "Available";

        }
        <span class="badge @statusClass js-status">@statusText</span>
    </td>
    <td>@Model.Email</td>
    <td>@Model.CreatedOn</td>
    @* <td>@Model.UpdatedBy</td> *@
    <td class="js-updated-on"> @Model.UpdatedOn</td>
    @* <td>@Model.DeletedBy</td> *@
    @* <td class ="js-updated-on"> @Model.DeletedDate</td> *@
    @* <td>@Model.DeletedReason</td> *@
    <td>
        <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary "
                data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-overflow="true">
            <span class="svg-icon svg-icon-2">
                <svg width="24px" height="24px" viewBox="0 0 24 24">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                        <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                        <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                        <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                    </g>
                </svg>
            </span>
        </button>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3"
             data-kt-menu="true" style="z-index: 107; position: absolute; right: 0; top: 100%;">
            <div class="menu-item px-3 ">
                <a href="javascript:;" class="menu-link px-3 js-render-modal"
                   data-title="Edit User" data-url="/Users/Edit/@Model.Id"
                   data-update="true">
                    Edit
                </a>
            </div>
            <div class="menu-item px-3">
                <a href="javascript:;" class="menu-link flex-stack px-3 js-toggle-status"
                   data-id="@Model.Id" data-url="/Users/ToggleStatus/@Model.Id">
                    Toggle Status
                </a>
            </div>
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="javascript:;" class="menu-link flex-stack px-3 js-render-modal"
                   data-title="Reset Password" data-url="/Users/ResetPassword/@Model.Id"
                   data-update="true">
                    Reset Password
                </a>
            </div>
            <!--end::Menu item-->
        </div>
    </td>
</tr>
